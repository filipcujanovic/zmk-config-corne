#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

#define DEFAULT 0
#define SYMBOLS 1
#define NAVIGATION 2
#define BLUETOOTH 3

#define HYPER(key) LS(LC(LA(LG(key))))

&mt {
    tapping-term-ms = <200>;
    quick-tap-ms = <150>;
};

/ {
    behaviors {
        isk: intuitive_sk {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <200>;
            bindings = <&kp>, <&sk>;
        };
        shifty: shift_caps_word {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <150>;
            bindings = <&isk LSHIFT LSHIFT>, <&caps_word>;
        };
    };

    combos {
        compatible = "zmk,combos";
        combo_esc {
            timeout-ms = <50>;
            key-positions = <2 3>;
            bindings = <&kp ESC>;
        };
        combo_grave {
            timeout-ms = <50>;
            key-positions = <1 2>;
            bindings = <&kp GRAVE>;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        default_layer {
            bindings = <
&none &kp Q  &kp W    &kp E      &kp R     &kp T                     &kp Y      &kp U     &kp I     &kp O    &kp P    &none
&none &kp A  &kp S    &kp D      &kp F     &kp G                     &kp H      &kp J     &kp K     &kp L    &kp SEMI &none
&none &kp Z  &kp X    &kp C      &kp V     &kp B  &none      &none   &kp N      &kp M     &kp COMMA &kp DOT  &kp FSLH &none
             &kp ESC &mo SYMBOLS &kp RET                  &kp SPACE  &mo NAVIGATION &kp BSPC
            >;
        };

        symbol_layer {
            bindings = <
&none &kp N1    &kp N2    &kp N3   &kp N4   &kp N5               &kp N6       &kp N7   &kp N8       &kp N9    &kp N0   &none
&none &kp EXCL  &kp AT    &kp HASH &kp DLLR &kp PRCNT            &kp CARET    &kp AMPS &kp ASTERISK &kp LPAR  &kp RPAR &none
&none &kp EQUAL &kp MINUS &kp PLUS &kp LBRC &kp RBRC &none &none &kp LBKT     &kp RBKT &kp SQT      &kp COLON &kp BSLH &none
                               &trans      &trans   &trans                  &trans    &trans   &trans
            >;
        };

        navigation_layer {
            bindings = <
&none &none          &none            &kp TAB        &none     &none               &kp C_PREVIOUS &kp C_VOLUME_DOWN    &kp C_VOLUME_UP      &kp C_NEXT &kp C_PLAY_PAUSE &none
&none &isk LALT LALT &isk LCTRL LCTRL &isk LGUI LGUI &shifty   &none               &kp LEFT       &kp DOWN             &kp UP               &kp RIGHT  &kp RA(BSPC)     &none
&none &kp LG(Z)      &kp LG(X)        &kp LG(C)      &kp LG(V) &none &none   &none &none          &kp C_BRIGHTNESS_DEC &kp C_BRIGHTNESS_INC &none      &none            &none
                                   &trans &trans &trans                                 &trans &trans &trans
            >;
        };

        bluetooth_layer {
            bindings = <
&none &bt BT_CLR   &bootloader  &none        &none        &none                    &kp F1  &kp F2  &kp F3  &kp F4  &kp F5 &none
&none &none        &none        &none        &none        &none                    &kp F6  &kp F7  &kp F8  &kp F9  &kp F10 &none
&none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &none &none &kp F11 &kp F12 &kp F13 &kp F14 &kp F15 &none
            &trans &trans &trans                                                   &trans &trans &trans

            >;
        };
    };
};
